<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/TextoBienvenidaLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="SAVINGS"
        android:textColor="#2C3E50"
        android:textSize="26sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/EntradaLoginPin"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#1ABC9C"
        android:hint="Ingrese PIN"
        android:textColorHint="#A9A9A9"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:padding="12dp"
        android:textAlignment="center"
        android:textColor="#2C3E50"
        android:textSize="20sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/BotonEntrarConPin"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1ABC9C"
        android:textColor="#ffffff"
        android:text="Iniciar Sesión"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="— o —"
        android:textColor="#7F8C8D"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/BotonHuellaDigital"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:src="@drawable/fingerprint_dialog_fp_icon"
        app:tint="#1ABC9C" />

</LinearLayout>