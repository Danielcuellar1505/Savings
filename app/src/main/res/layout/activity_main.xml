<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ContenedorLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/ImagenLogoAndroid"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/EtiquetaBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="¡Bienvenid@!"
        android:textSize="28sp"
        android:textColor="#333333"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/BotonHuellaDigital"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Autenticación Biométrica"
        android:scaleType="fitCenter"
        android:src="@drawable/fingerprint_dialog_fp_icon" />

</LinearLayout>